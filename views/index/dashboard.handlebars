<h1>Welcome {{user.firstName}}</h1>
<h4>Your Stories</h4>
{{#if stories}}
<table class="stripped">
  <thead>
    <tr>
      <th>title</th>
      <th>Date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each stories}}
    <tr>
      <td><a href="/stories/show/{{id}}">{{title}}</a></td>
      <td>{{formateDate date 'MMMM Do YYYY'}}</td>
      <td class="dash-status">{{status}}</td>
      <td>
        <a class="btn left-align" href="/stories/edit/{{id}}"><i class="fa fa-pencil"></i> Edit</a>
        <form action="/stories/{{id}}?_method=DELETE" method="POST" id="delete-form">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn red"><i class="fa fa-remove"></i> Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{else}}
<p> Your have not created any stories yet</p>
{{/if}}